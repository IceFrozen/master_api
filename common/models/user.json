{
  "name": "user",
  "plural": "users",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "forceId":false
  },
  "properties": {
    "sex":{
      "type":"Number",
      "required":true,
      "default":1
    },
    "name":{
      "type":"string",
      "required":true,
      "default":"未设置",
      "description": "姓名"
    },
    "phoneNumbr":{
      "type":"string",
      "description": "电话号码"
    },
    "birthday":{
      "type":"number",
      "description": "出生年月",
      "default":0
    },
    "isSetOk":{
      "type":"number",
      "required":true,
      "default":0,
      "description": "是否设置了个人信息"
    },
    "addressValue":{
      "type":["string"],
      "default":[]
    },
    "pendingTransactions":{
      "type":["string"],
      "default":[]
    }
  },
  "validations": [],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "AccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "roles":{
      "type":"hasMany",
      "model": "Role",
      "foreignKey":"principalId",
      "through": "RoleMapping"
    },
    "sellerInfo":{
      "type":"hasOne",
      "model": "SellerInfo",
      "foreignKey":"id",
      "primaryKey":"id"
    },
    "wxInfo":{
      "type":"hasOne",
      "model": "PlayerInfo",
      "foreignKey":"id",
      "primaryKey":"id"
    },
    "adminInfo":{
      "type":"hasOne",
      "model": "AdminInfo",
      "foreignKey":"id",
      "primaryKey":"id"
    }
  },
  "acls": [
    {
      "accessType":"EXECUTE",
      "permission":"ALLOW",
      "principalType":"ROLE",
      "principalId":"$everyone",
      "property":["loginWithWechat","createWithWechat"]
    },
    {
      "permission":"ALLOW",
      "principalType":"ROLE",
      "principalId":"$owner",
      "property":[
        "__get__sellerInfo",
        "__get__sellerInfo__uplevel",
        "__get__sellerInfo__downlevels",
        "__get__sellerInfo__links",
        "__get__sellerInfo__players",
        "__create__sellerInfo__links",
        "__get__adminInfo",
        "__get__wxInfo",
        "updateInfo",
        "__transferCoinToSeller__sellerInfo"
      ]
    },
    {
      "permission":"ALLOW",
      "principalType":"ROLE",
      "principalId":"admin",
      "accessType":"*",
      "property":"*"
    }
  ],
  "hidden": ["__created","__modified"],
  "methods": {
    "loginWithWechat":{
      "accepts":[
          {"arg":"wxCode","type":"string"},
          {"arg": "options", "type": "object", "http": "optionsFromRequest"}
        ],
      "returns":{"arg": "accessToken", "type": "object", "root": true}
    }
  },
  "mixins" : {
    "AddCreatedTime":{}
  }
}
